<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculadoraDisplay"
        android:layout_width="289dp"
        android:layout_height="144dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="354dp"
        android:layout_height="289dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculadoraDisplay"
        app:layout_constraintVertical_bias="0.123">

        <Button
            android:id="@+id/buttonLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="limpiar"
            android:text="CE"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonPotencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarPotencia"
            android:text="@string/BotonPotencia"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarRaiz"
            android:text="√"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonDividir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarDivision"
            android:text="/"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonSiete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar7"
            android:text="7"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonCuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar4"
            android:text="4"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar1"
            android:text="1"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonPunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrarPunto"
            android:text="."
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonOcho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar8"
            android:text="8"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonCinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar5"
            android:text="5"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar2"
            android:text="2"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonCero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar0"
            android:text="0"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonNueve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar9"
            android:text="9"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarMultiplicacion"
            android:text="*"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonSeis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar6"
            android:text="6"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonMenos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarMenos"
            android:text="-"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="mostrar3"
            android:text="3"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/buttonMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:onClick="mostrarMas"
            android:text="+"
            android:textSize="18sp"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F44336"
            android:onClick="mostrarIgual"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#888D8D"
            android:onClick="borrar"
            android:text="←"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="siguiente"
            android:text="@string/BotonSiguiente"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="memoriaMS"
            android:text="@string/BotonMS"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="memoriaMR"
            android:text="@string/BotonMR"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="memoriaMC"
            android:text="@string/BotonMC"
            app:layout_column="0"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>